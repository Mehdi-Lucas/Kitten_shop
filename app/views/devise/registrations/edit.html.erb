
<div class="container">
  <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row justify-content-md-center">
        <div class="field">
          <%= f.label :first_name, class: "h5"  %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "First name", class:"form-control form-control-lg" %>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="field">
          <%= f.label :last_name, class: "h5" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "Last name", class:"form-control form-control-lg" %>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="field">
          <%= f.label :email, class: "h5"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
        </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>

    <div class="row justify-content-md-center">
      <div class="field">
        <%= f.label :password, class: "h5"  %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="field">
        <%= f.label :password_confirmation, class: "h5"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg" %>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="field">
        <%= f.label :current_password, class: "h5"  %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control form-control-lg" %>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary" %>
      </div>
    </div>

  <% end %>

    <div class="row justify-content-md-center">
      <h4>Unhappy?</h3>
    </div>

    <div class="row justify-content-md-center">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>
    </div>
    
</div>
<%= link_to "Back", :back %>
